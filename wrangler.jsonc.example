/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "rag-agent",
	"main": "src/server.ts",
	"compatibility_date": "2025-08-03",
	"compatibility_flags": [
		"nodejs_compat"
	],
	"ai": {
		"binding": "AI",
		"remote": true
	},
	"assets": {
		"directory": "public"
	},
	"durable_objects": {
		"bindings": [
			{
				"name": "Chat",
				"class_name": "Chat"
			}
		]
	},
	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": [
				"Chat"
			]
		}
	],
	"r2_buckets": [
		{
			"bucket_name": "rag-documents",
			"binding": "DOCUMENTS_BUCKET"
		}
	],
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "rag-database",
			"database_id": "<DATABASE_ID>"
		}
	],
	"vectorize": [
		{
			"binding": "VECTOR_INDEX",
			"index_name": "rag-vector-index"
		}
	],
	"workflows": [
		{
			"name": "DOCUMENT_WORKFLOW",
			"binding": "DOCUMENT_WORKFLOW",
			"class_name": "DocumentProcessingWorkflow"
		}
	],
	"observability": {
		"enabled": true,
		"traces": {
			"enabled": true
		}
	},
	"placement": { "mode": "smart" }
}